// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int     @id @default(autoincrement())
  title       String  @unique
  description String
  img         String
  link        String
  github      String
  featured    Boolean
}

model Experience {
  id          Int    @id @default(autoincrement())
  position    String
  company     String
  companyLink String
  time        String
  address     String
  work        Json[]
}

model Education {
  id        Int    @id @default(autoincrement())
  type      String
  place     String
  placeLink String
  time      String
  info      Json[]
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String  @unique
  summary  String
  content  String
  img      String
  link     String
  date     String
  time     String
  featured Boolean
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String @unique
  x    String
  y    String
}
